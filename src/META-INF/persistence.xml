<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="fincarePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    
    <exclude-unlisted-classes>false</exclude-unlisted-classes>

    <class>model.Akun</class>
    <class>model.Admin</class>
    <class>model.PeranAdmin</class>
    <class>model.Pengguna</class>
    <class>model.PeranPengguna</class>
    <class>model.Pelatihan</class>
    <class>model.PengajuanBantuan</class>
    <class>model.PengajuanBaris</class>
    <class>model.SertifikatPelatihan</class>
    <class>model.Insentif</class>
    <class>model.InsentifBaris</class>
    <class>model.PelatihanPengguna</class>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/fincare1"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <property name="eclipselink.exclude-unlisted-classes" value="false"/>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>

      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
    </properties>
  </persistence-unit>
</persistence>
